<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieDbApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="appBarLayoutStyle">
            @style/Theme.AppCompat.Light.NoActionBar
        </item>

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="Theme.MovieDbApp" parent="Base.Theme.MovieDbApp" />
    
    <style name="Theme.MovieDbApp.MaterialCardView" parent="Theme.MovieDbApp">
        <item name="cardCornerRadius">25dp</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.MovieDbApp.TextView" parent="Theme.MovieDbApp">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
    </style>

    <style name="Theme.MovieDbApp.TextView.Header" parent="Theme.MovieDbApp.TextView">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MovieDbApp.TextView.Title" parent="Theme.MovieDbApp.TextView">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MovieDbApp.TextView.Body" parent="Theme.MovieDbApp.TextView">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Theme.MovieDbApp.TextView.Tag" parent="Theme.MovieDbApp.TextView">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>
</resources>
